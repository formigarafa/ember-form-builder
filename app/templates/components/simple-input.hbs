{{#if hasLabel}}
  <div class="simple-input-label">
    {{#simple-label for=inputElementId isRequired=isRequired}}{{label}}{{/simple-label}}
  </div>
{{/if}}
<div class={{fieldClassName}}>
  {{#if hasInlineLabel}}
    {{#simple-label for=inputElementId isRequired=isRequired}}
      {{component inputComponentName config=inputConfig class=inputClassName}}
      <span class="simple-input-inline-label">{{label}}</span>
    {{/simple-label}}
  {{else}}
    {{component inputComponentName config=inputConfig class=inputClassName}}
  {{/if}}
  {{#if hasUnit}}
    <div class={{unitClassName}}>{{unit}}</div>
  {{/if}}
  {{#if hasHint}}
    <div class={{hintClassName}}>{{hint}}</div>
  {{/if}}
  {{#if hasErrors}}
    <div class={{errorsClassName}}>{{errorMessages}}</div>
  {{/if}}
</div>
